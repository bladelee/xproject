<h2><%= t(:label_people_new_person) %></h2>

<%= labelled_tabular_form_for @person, :html => { :multipart => true, :method => :post, :id => "person_form" }  do |f|  %>
  <%= error_messages_for 'person' %>

  <fieldset class="box tabular">
    <legend><%=t(:label_authentication)%></legend>
    <p><%= f.text_field :login, :required => true, :size => 25  %></p>

    <div id="password_fields" >
    <p><%= f.password_field :password, :required => true, :size => 25  %>
    <em class="info"><%= t(:text_caracters_minimum, :count => 8) %></em></p>
    <p><%= f.password_field :password_confirmation, :required => true, :size => 25  %></p>
    </div>
  </fieldset>



  <%= render :partial => 'form', :locals => {:f => f} %>

  <%= submit_tag t(:button_save) -%>
<% end -%>

<% content_for :sidebar do %>
<% end %>

<% content_for :header_tags do %>
  <%=  %>
  <%= javascript_include_tag :redmine_people, :plugin => 'redmine_people'  %>
  <%= robot_exclusion_tag %>
<% end %>
